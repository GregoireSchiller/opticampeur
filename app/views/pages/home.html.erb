<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_url 'homepage/camping_car_depardon.jpg' %>);">
  <div class="banner-content">
    <h1>Abolis les frontières </h1>
    <p>Be limitless</p>
    </div>
  <div class="searchbar-wrapper">
    <div class="form-container">
      <form action="/search" method="get" class="form-inline">
        <input type="text" class="form-control datepicker" placeholder="début de location">
        <input type="text" class="form-control datepicker" placeholder="fin de location">
        <input type="text" class="form-control" name="search_term" placeholder="ville">
        <button class="btn btn-danger" type="submit" id="search-button">Rechercher</button>
      </form>
    </div>
  </div>
</div>

<div class="card-grid-wraper bg-light-grey ">
  <div class="container bg-light-grey">
    <div class="grid-header">
      <h2><strong>Louez un camping car</strong></h2>
      <h3>Et voyagez partout en Europe</h3>
      <h4>Choisissez parmi plus de <%= link_to (CampingCar.count.to_s + " camping-cars"), camping_cars_path %> disponibles à la location</h4>
    </div>
  </div>
</div>

<div class="card-grid-wraper bg-light-grey">
  <div class="container">
    <div class="row">
      <% @selected_camping_cars.each do |camping_car| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-image" style="background-image: url(<%=image_url("homepage/cc" + (1..15).to_a.sample.to_s + ".jpg") %>);">
              <img src="<%=image_url("homepage/u" + (1..15).to_a.sample.to_s + ".jpg") %>" class="avatar">
              <div class="card-price text-center">
                <p><strong><%=camping_car.price_per_day%></strong><%='€/jour'%></p>
                <p>de location</p>
              </div>
            </div>
            <div class="card-footer">
              <div class="category">
                <p><%=camping_car.category%></p>
              </div>
              <div class="model">
                <p><%=camping_car.car_model%></p>
              </div>
              <div class="card-description">
                <div class="sleep">
                  <p><%=camping_car.sleep_capacity%> <i class="fa fa-bed" style="color:#7AAFB7"></i></p>
                </div>
                <div class="capacity">
                  <p><%=camping_car.capacity_grey_card%> <i class="fa fa-car" style="color:#7AAFB7" ></i></p>
                </div>
              </div>
            </div>
            <%= link_to "", camping_car_path(camping_car), class: "card-link" %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>


<% content_for(:after_js) do %>
    <% javascript_tag do %>
    $('.datepicker').datepicker({
        format: "dd/mm/yyyy",
        weekStart: 1,
        startDate: "today",
        maxViewMode: 0,
        language: "fr"
    });
  <%end%>
<%end%>



