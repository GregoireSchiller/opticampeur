<h1>Votre profil</h1>

<% @user_bookings.each do |booking| %>
<h2>Vos locations en tant que locataire</h2>
  <p><%= booking.camping_car.car_model %></p>
  <p><%= booking.user_review.rating %></p>
  <p><%= booking.user_review.comment %></p>
  <p><%= link_to "Notez votre loueur", new_booking_camping_car_review_path(booking) %></p>
<% end %>
<hr>
<h2>Vos locations en tant que loueur</h2>
<% @user_camping_cars.each do |camping_car| %>

  <% camping_car.bookings.each do |booking| %>
  <p><%= booking.camping_car.car_model %></p>
  <p><%= booking.camping_car_review.rating %></p>
  <p><%= booking.camping_car_review.comment %></p>
  <p><%= link_to "Notez votre locataire", new_booking_user_review_path(booking) %></p>
  <% end %>
<% end %>

<div class="wrapper bg-light-grey text-center padded-show">
  <div class="profile_picture">
    <%= image_tag "profile.jpg", class: 'avatar-very-large-bordered' %>
  </div>
  <h3> <%= 'Put email address here' %> </h3>
</div>


<div class="tabs">
  <a class="tab active" href="#" data-target="#campingcarsibooked">
    <h3>Camping cars I booked</h3>
  </a>
  <a class="tab" href="#" data-target="#campingcardirented">
    <h3>Camping cars I rented</h3>
  </a>
  <a class="tab" href="#" data-target="#mycampingcars">
    <h3>My camping cars</h3>
